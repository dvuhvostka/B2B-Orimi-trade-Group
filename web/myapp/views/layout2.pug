	body
		header(class='sticky-top')
			nav(class='navbar navbar-expand-md navbar-dark bg-dark')
				a(class='navbar-brand' href='/') Orimi Trade Group
				button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarid' aria-controls="navbarid" aria-expanded="false" aria-label="Toggle navigation")
					span(class='navbar-toggler-icon')
				div(id='navbarid' class='collapse navbar-collapse')
					ul(class='navbar-nav mr-auto mt-2 mt-lg-0')
							li(class='nav-item')
								a(class='nav-link' href='/shop') Магазин
							li(class='nav-item')
								a(class='nav-link' href='/news') Новости
							if isRegistred
								li(class='nav-item')
									a(class='nav-link' href='/user') Аккаунт
					if !isRegistred
						ul(class='navbar-nav justify-content-end')
							li(class='nav-item dropdown')
								a(class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Войти/Регистрация
								div(class='dropdown-menu' area-lablelledby='navbarDropdownMenuLink')
									a(href="/login" class='dropdown-item') Войти
									a(href="/register" class='dropdown-item') Регистрация
					else
						ul(class='navbar-nav mr-auto w-100 justify-content-end')
							li(class='nav-item')
								a(class='nav-link' href='#') Корзина
									img(class='img-fluid' src="open-iconic-master/svg/cart.svg" alt='')
							li(class='nav-item')
								a(class='nav-link btn btn-dark active ' href='/logout') Выход
