doctype html
html
	head
		title #{title}
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
		link(rel='stylesheet' href='../common.css')
		link(rel='shortcut icon' href='favicon.ico' type='image/x-icon')
		script(src="https://code.jquery.com/jquery-3.5.0.js")
		script(src="https://use.fontawesome.com/releases/v5.0.8/js/all.js")
		block scripts
	body
		.modal.fade#modal(role='dialog' tabindex='-1' )
			.modal-dialog
				.modal-content
					.modal-header
						h5.modal-title Ошибка
						button.close(type='button' data-dismiss='modal')
							span(aria-hidden='true') &times;
					.modal-body
						p#error_msg
					.modal-footer
						button.btn.btn-secondary(data-dismiss='modal') Закрыть
		nav(class='navbar navbar-expand-md navbar-dark bg-dark sticky-top')
			.container-fluid
				a(href='/shop' class='navbar-brand') Фирменный магазин Орими-трэйд
				button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarContent')
					span(class='navbar-toggler-icon')
				div(class='collapse navbar-collapse' id='navbarContent')
					if isRegistred
						ul(class='navbar-nav ml-auto')
							li(class='nav-item ')
								a(href='/cart' class='nav-link') Корзина
							li(class='nav-item')
								a(href='/user' class='nav-link') Аккаунт
							li(class='nav-item ')
								a(href='/logout' class='nav-link') Выйти
					else
						ul(class='navbar-nav ml-auto')
							li(class='nav-item ')
								a(href='/cart' class='nav-link') Корзина
							li(class='nav-item')
								.dropdown
									a(class='dropdown-toggle nav-link' href='#' id='dropdownLink' data-toggle='dropdown' aria-haspopup="true" aria-expanded="false") Войти/Регистрация
									.dropdown-menu(area-labelledby='dropdownLink' class='nav-item shadow-lg')
										a(class='dropdown-item' href='/login') Войти
										a(class='dropdown-item' href='/register') Регистрация
		main
			#main-wrap
				block content
		if needFooter
			footer
				hr
				.container-fluid
					.row
						.col-lg-4.info
							a(href='/info#contacts') Контакты
							a(href='/info#delivery') Доставка и оплата
						.col-lg-4.col-sm-12
							p.copyright  2020 © Группа компаний Орими Трэйд
							.socials
								a(href='https://vk.com/orimitrade')
									i.fab.fa-vk
								a(href='https://www.facebook.com/OrimiTrade')
									i.fab.fa-facebook-square
								a(href='https://twitter.com/OrimiTrade')
									i.fab.fa-twitter
						.col-lg-4.text-center
							button.btn.btn-outline-success.btn-help Обратная связь
	script.
		var modal = $("#modal");
		var error_msg=$("#error_msg");
		
		function showModal(msg){
			error_msg.html(msg);       
			modal.modal('show');
		}
	script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
	script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")
