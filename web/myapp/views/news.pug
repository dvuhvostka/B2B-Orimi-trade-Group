extends layout2

block content
  - var q_n = news_q
    input(placeholder="Название статьи")#newsTitle
    input(placeholder="Описание")#newsDescription
    input(placeholder="Текст статьи")#newsBody
    input(placeholder="Ссылка на изображение к статье", value="https://via.placeholder.com/600")#newsImg
    button(onclick="addNews();location.reload();")#add Добавить статью
    button(onclick="document.location.href='/add';")#delete Удалить все нахуй!
    script(src='/news.js')
    .container(class='mt-3')
      - for(var j=0;j<q_n/2; j++)
        .row
          - for(var i=0; i<2 && i+2*j<q_n; i++)
            div(class='col-xl-9 col-md-12 mx-auto')
              .card(class=' mx-1 mb-3')
                .card-header
                  h3(class='card-title text-center' ) #{pnews[i+2*j].header}                  
                img(src=pnews[i+2*j].img_url class='card-img-top' alt='...' style='max-height: 250px; min-height: 200px;')
                .card-body
                  h5(class='card-subtitle') #{pnews[i+2*j].intro}
                  p(class='card-text') #{pnews[i+2*j].body}
                  .col-xl-12
                    p(class="font-weight-lighter card-text" style='font-size: 0.7rem;') Дата написания: #{pnews[i+2*j].date} 
          
      
        
