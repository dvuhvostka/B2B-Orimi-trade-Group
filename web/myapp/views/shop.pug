												button(class='btn btn-secondary plus')
													i.fas.fa-plus.controls
					else
						- for(var i=0; i<16; i++)
								div(class='shop_item' id=products[i+j*16].id sort=products[i+j*16].sort about=products[i+j*16].about weight=products[i+j*16].weight packaging=products[i+j*16].packaging bags=products[i+j*16].tea_bags)
									if (products[i+j*16].bestseller)
										.bestseller
											span Бестселлер
									div(class='carousel_img')
										if(products[i+j*16].subtype)
											img(src="../store_prods/horeca/"+products[i+j*16].sort+"/"+products[i+j*16].articul+"/"+"1.jpg")
										else
											img(src="../store_prods/"+products[i+j*16].type+"/"+products[i+j*16].sort+"/"+products[i+j*16].articul+"/"+"1.jpg")
									if(products[i+j*16].subtype)
										a(href='/shop/'+products[i+j*16].subtype+'?id='+products[i+j*16].id class='item_name') #{products[i+j*16].item_name}
									else
										a(href='/shop/'+products[i+j*16].type+'?id='+products[i+j*16].id class='item_name') #{products[i+j*16].item_name}
									if(products[i+j*16].sale_price!=0)
