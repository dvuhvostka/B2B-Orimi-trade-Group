											.range_items
												button(class='btn btn-secondary box_count_minus' box_count=products[i+j*16].box_count)
													i.fas.fa-minus.controls
												input(type='text' value='0' box_count=products[i+j*16].box_count class='input' id_data=products[i+j*16].id).count_input_box
												button(class='btn btn-secondary box_count_plus' box_count=products[i+j*16].box_count)
													i.fas.fa-plus.controls
			if q != 0
				nav(aria-label='paginationNav').pagination_wrap
					ul.pagination.bot
						li.page-item
							a.page-link(href='#' aria-label='Previous').prevpage
								span(aria-hidden='true') &laquo;
