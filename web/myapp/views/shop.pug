											i.fas.fa-ruble-sign.rs
											sup.sale_price_old #{products[i+j*16].item_price}
												i.fas.fa-ruble-sign.rs.sale_sign
									else
										p(class='item_price') #{products[i+j*16].item_price}
											i.fas.fa-ruble-sign.rs
									div.footer_item
										if(products[i+j*16].subtype)
											button.b(class='btn btn-primary addtocart' type=products[i+j*16].subtype data-id=products[i+j*16].id) Купить
										else
											button.b(class='btn btn-primary addtocart' type=products[i+j*16].type data-id=products[i+j*16].id) Купить
										div.sht Кол-во в шт
											.range_items
												button(class='btn btn-secondary minus')
													i.fas.fa-minus.controls
												input(type='text' value='1' class='input count_input_pack' data-id=products[i+j*16].id)
												button(class='btn btn-secondary plus')
													i.fas.fa-plus.controls
